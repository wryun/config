" Set up syntax highlighting
source "filters.rc"
setv $autocolor-hook HighlightFilterMsg
setv $read-hook HighlightFilterMsg
set autocolor=2000

" Vim-ish key memory hacks...
bind-key undo-changes-backward u
bind-key redo-changes-forward ^R
set undolimit 25

set shiftwidth=4 tabstop=4 notabinsert
"set list

" cmode overrides the above behaviour anyway...
" These are (something) like mgr style C settings.
define-mode c
~with define-submode c
  ts=3
  sw=3
  notabinsert
~endwith
